<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="35dp">

        <EditText
            android:id="@+id/editTextPincode"
            android:layout_width="227dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/text"

            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"

            android:ems="10"
            android:hint="Enter your Pin Code"
            android:inputType="numberDecimal"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:text="Find"
            android:textSize="24sp" />
        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="14dp"

            app:srcCompat="@android:drawable/ic_menu_info_details" />
    </LinearLayout>




    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:text="App to manage gathering in your area during COVID19 epedemic"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        tools:text="details text" />

    <TextView
        android:id="@+id/textViewStateEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="State :"
        android:textColor="@android:color/holo_red_light"
        android:textSize="26sp"

        />

    <TextView
        android:id="@+id/textViewDistrictEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStateEdit"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="District :"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="26sp" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDistrictEdit"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="Check"
        android:textColor="@android:color/holo_purple"
        android:textSize="30sp">

    </Button>


</RelativeLayout>